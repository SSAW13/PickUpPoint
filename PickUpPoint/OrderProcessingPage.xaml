<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickUpPoint.OrderProcessingPage"
             Title="Выдача заказа">

    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text="Введите номер заказа:"/>
        <Entry x:Name="OrderIdEntry" 
               Placeholder="Номер заказа"/>

        <Button Text="Поиск" 
                Clicked="SearchOrderClicked"
                HorizontalOptions="Center"/>

        <Frame x:Name="Order" Padding="15" BackgroundColor="#F0F0F0">
            <VerticalStackLayout Spacing="10">
                <Label Text="Информация о заказе:" FontAttributes="Bold"/>
                <Label x:Name="OrderInfoLabel" 
                       Text="Заказ №1812: Готов к выдаче"/>
                <Label Text="Номер клиента +7-999-999-99-99"/>
                <Label Text="Ячейка 15"/>
                <Button Text="Выдать заказ"
                        BackgroundColor="Green"
                        TextColor="White"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>